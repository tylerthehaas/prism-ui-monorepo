{
  "name": "prism-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=10.0.0 <11.0.0",
    "yarn": ">=1.7.0 <2.0.0"
  },
  "description": "Common UI for OC Tanner",
  "scripts": {
    "build": "rm -rf ./dist/ && NODE_ENV=production webpack -p",
    "dev:simple": "webpack-dev-server --port 3000",
    "dev": "webpack-dashboard -- webpack-dev-server --port 3000 --inline --progress",
    "start": "node server.js",
    "lint": "eslint . --ext .js",
    "prettier": "yarn prettier:js && yarn prettier:css",
    "prettier:js": "prettier --write \"./**/*.js\"",
    "prettier:css": "prettier --parser scss --write \"./**/*.scss\"",
    "test": "node ./jest-config/jest.js -w='2' --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "license": "ISC",
  "publishConfig": {
    "registry": "https://artifactory.octanner.net/api/npm/npmjs-repo/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octanner/prism-ui.git"
  },
  "dependencies": {
    "@types/react": "^16.7.18",
    "classnames": "^2.2.6",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "prismjs": "^1.15.0",
    "prop-types": "^15.6.2",
    "ramda": "^0.25.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router-dom": "^4.3.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "html-webpack-plugin": "^3.2.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "mini-css-extract-plugin": "^0.4.3",
    "webpack-dashboard": "^2.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-ramda": "^1.6.3",
    "css-loader": "^1.0.0",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.0.10",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "ts-loader": "^5.3.2",
    "typescript": "^3.2.2",
    "core-js": "2.5.x"
  },
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.6.1",
    "eslint-plugin-jest": "^21.24.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "24.5.0",
    "babel-jest": "24.5.0",
    "jest-dom": "^2.0.0",
    "jsdom": "^12.1.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "react-testing-library": "^5.1.1",
    "ts-jest": "^23.10.5",
    "webpack-dev-server": "^3.2.1",
    "yarnhook": "^0.3.0"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-class-properties",
      "ramda"
    ],
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ]
          },
          "useBuiltIns": "usage"
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs",
              "useBuiltIns": "usage",
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "jest",
      "react",
      "jsx-a11y"
    ],
    "rules": {
      "jest/expect-expect": "error",
      "jest/prefer-to-be-null": "error",
      "jest/prefer-to-be-undefined": "error",
      "jest/valid-describe": "error",
      "jest/valid-expect-in-promise": "error",
      "react/jsx-sort-props": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "coverage"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "moduleFileExtensions": [
      "js",
      "json",
      "tsx"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|png|svg)$": "<rootDir>/jest-config/file-mock.js",
      "^.+\\.s?css$": "<rootDir>/jest-config/style-mock.js"
    },
    "modulePaths": [
      "<rootDir>/components/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-config/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "./components": {
        "lines": 80,
        "statements": 80,
        "branches": 80
      }
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/jest-config/"
    ]
  }
}
