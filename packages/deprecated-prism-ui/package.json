{
  "name": "prism-ui",
  "version": "0.0.1",
  "engines": {
    "node": ">=10.0.0 <11.0.0",
    "yarn": ">=1.7.0 <2.0.0"
  },
  "description": "Common UI for OC Tanner",
  "scripts": {
    "build:css": "rm -rf ./dist/ && NODE_ENV=production webpack -p",
    "dev:css": "webpack-dashboard -- webpack-dev-server --port 3000 --inline --progress",
    "start": "node server.js",
    "lint": "eslint . --ext .js",
    "prettier": "yarn prettier:js && yarn prettier:css",
    "prettier:js": "prettier --write \"./**/*.js\"",
    "prettier:css": "prettier --parser scss --write \"./**/*.scss\"",
    "precommit": "pretty-quick --staged",
    "postmerge": "yarnhook",
    "postcheckout": "yarnhook",
    "postrewrite": "yarnhook",
    "test": "node ./jest-config/jest.js -w='2' --no-cache",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch"
  },
  "license": "ISC",
  "publishConfig": {
    "registry": "https://artifactory.octanner.net/api/npm/npmjs-repo/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octanner/prism-ui.git"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.5.0",
    "eslint-plugin-jest": "^21.22.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jsdom": "^11.12.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dashboard": "^2.0.0",
    "webpack-dev-server": "^3.1.8",
    "yarnhook": "^0.3.0"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ]
          },
          "useBuiltIns": "usage"
        }
      ]
    ],
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "modules": "commonjs",
              "useBuiltIns": "usage",
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "jest/expect-expect": "error",
      "jest/prefer-to-be-null": "error",
      "jest/prefer-to-be-undefined": "error",
      "sort-keys": "error",
      "jest/valid-describe": "error",
      "jest/valid-expect-in-promise": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "docs",
    "coverage"
  ],
  "prettier": {
    "trailingComma": "all"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|png|svg)$": "<rootDir>/jest-config/file-mock.js",
      "^.+\\.css$": "<rootDir>/jest-config/style-mock.js"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/jest-config/transform.js"
    },
    "setupFiles": [
      "<rootDir>/jest-config/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(dist|node_modules)/",
      "<rootDir>/src/"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.js$",
    "coverageReporters": [
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80,
        "statements": 80,
        "functions": 80,
        "branches": 80
      }
    }
  }
}
